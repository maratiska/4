import java.util.ArrayList;
import java.util.List;
import java.util.function.Function;
public class Main {
    public static <T, P> List<P> transform(List<T> list, Function<T, P> function) {
        List<P> result = new ArrayList<>();
        for (T item : list) {
            result.add(function.apply(item));
        }
        return result;
    }

    public static void main(String[] args) {
        List<String> strings = List.of("qwerty", "asdfg", "zx");
        List<Integer> lengths = transform(strings, s -> s.length());
        System.out.println("Длины строк: " + lengths);

        List<Integer> numbers = List.of(1, -3, 7);
        List<Integer> absoluteValues = transform(numbers, n -> Math.abs(n));
        System.out.println("Абсолютные значения: " + absoluteValues); 

        List<int[]> arrays = List.of(new int[]{1, 2, 3}, new int[]{-1, -2, -3}, new int[]{7, 0, 5});
        List<Integer> maxValues = transform(arrays, arr -> {
            int max = Integer.MIN_VALUE;
            for (int num : arr) {
                if (num > max) {
                    max = num;
                }
            }
            return max;
        });
        System.out.println("Максимальные значения: " + maxValues); 
    }
}
